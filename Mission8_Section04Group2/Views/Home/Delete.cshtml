@model Goal
<h1>Are you sure you want to delete the goal?</h1>

<h2>Goal to be deleted: @Model.GoalName</h2>

<form asp-controller="Home" asp-action="Delete" method="post" class="text-center p-4 border rounded shadow-sm bg-light">
    <input type="hidden" asp-for="GoalId" />

    <p class="mb-3">Are you sure you want to delete this record?</p>

    <div class="d-flex justify-content-center gap-3">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="QuadrantView">Cancel</a>
    </div>
</form>