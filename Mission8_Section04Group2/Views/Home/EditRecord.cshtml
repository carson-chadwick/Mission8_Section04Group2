@{
    ViewData["Title"] = "Goal Information";
}

@model Goal

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Goal Information</h1>
    </div>

    <form class="row g-3 p-4 border rounded shadow-sm bg-light" method="post">
        <input type="hidden" asp-for="GoalId"/>

        <div class="col-md-6">
            <label asp-for="GoalName" class="form-label">Goal Name</label>
            <input class="form-control" asp-for="GoalName"/>
        </div>

        <div class="col-md-6">
            <label asp-for="DueDate" class="form-label">Due Date</label>
            <input class="form-control" asp-for="DueDate" type="date"/>
        </div>

        <div class="col-md-6">
            <label asp-for="Quadrant" class="form-label">Quadrant</label>
            <select class="form-control" asp-for="Quadrant">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>

        <div class="col-md-6">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select class="form-control" asp-for="CategoryId"> 
                <option value="">Select a Category</option> 
                @foreach (Category c in ViewBag.Categories) 
                { 
                    <option value="@c.CategoryId">@c.CategoryName</option> 
                } 
            </select>
        </div>

        <div class="col-md-6">
            <label asp-for="Completed" class="form-label">Completed</label> 
            <div class="d-flex align-items-center gap-3"> 
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Completed" value="true" id="editedYes"/> 
                    <label class="form-check-label" for="editedYes">Yes</label> 
                </div> 
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Completed" value="false" id="editedNo"/> 
                    <label class="form-check-label" for="editedNo">No</label> 
                </div> 
            </div>
        </div>

        <div class="col-12 text-center mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>